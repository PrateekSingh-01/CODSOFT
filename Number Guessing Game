import java.util.Scanner;
import java.util.Random;

public class NumberGuessingGame {
    /**
     * @param args
     */
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Random rand = new Random();
        
        int score = 0;
        int rounds = 0;
        String playAgain;

        System.out.println("ðŸŽ® Welcome to the Number Guessing Game! ðŸŽ®");
        System.out.println("Guess the number between 1 and 100.");
        System.out.println("You have 5 attempts per round.\n");

        do {
            int numberToGuess = rand.nextInt(100) + 1;
            int attempts = 5;
            boolean hasWon = false;

            System.out.println("A new number has been selected. Let's start!");

            while (attempts > 0) {
                System.out.print("Enter your guess: ");
                int userGuess = sc.nextInt();
                attempts--;

                if (userGuess == numberToGuess) {
                    System.out.println("ðŸŽ‰ Congratulations! You guessed the number correctly.");
                    hasWon = true;
                    score++;
                    break;
                } else if (userGuess < numberToGuess) {
                    System.out.println("ðŸ“‰ Too low!");
                } else {
                    System.out.println("ðŸ“ˆ Too high!");
                }

                System.out.println("Attempts left: " + attempts);
            }

            if (!hasWon) {
                System.out.println("âŒ You've used all attempts! The correct number was: " + numberToGuess);
            }

            rounds++;
            System.out.println("\nâœ… Round Over! Your Score: " + score + "/" + rounds);

            System.out.print("\nDo you want to play again? (yes/no): ");
            playAgain = sc.next();

            System.out.println(); // For better spacing

        } while (playAgain.equalsIgnoreCase("yes"));

        System.out.println("ðŸŽ® Game Over! Final Score: " + score + "/" + rounds);
        System.out.println("Thank you for playing! ðŸ‘‹");

        sc.close();
    }
}
